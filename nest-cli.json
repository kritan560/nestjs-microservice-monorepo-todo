{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-2/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-2/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-2",
  "projects": {
    "api-2": {
      "type": "application",
      "root": "apps/api-2",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/api-2/tsconfig.app.json",
        "assets": ["proto/*.proto"],
        "watchAssets": true
      }
    },
    "todo": {
      "type": "application",
      "root": "apps/todo",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/todo/tsconfig.app.json",
        "assets": ["proto/*.proto"],
        "watchAssets": true
      }
    }
  }
}
